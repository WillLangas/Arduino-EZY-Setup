void setup() {
  Serial.begin(9600);
}

void loop() {
  Serial.println("Systems initiated");
  pinMode(1, OUTPUT);
}

//Lowest and highest pins must be PWM pins

int motorSetup(int lowestPin, int highestPin){
  for(lowestPin = lowestPin; lowestPin <= highestPin; lowestPin++){
    pinMode(lowestPin, OUTPUT);
}
  Serial.println("All motor pins are now outputs");  
}


int motorTest(int lowestPin, int highestPin){
  Serial.println("Motors testing");
  for(lowestPin = lowestPin; lowestPin <= highestPin; lowestPin++){
    digitalWrite(lowestPin, 150);
    delay(2000);
    digitalWrite(lowestPin, 0); 
  } 
}

int motorAllOff(int lowestPin, int highestPin){
  Serial.println("All motors off");
  for(lowestPin = lowestPin; lowestPin <= highestPin; lowestPin++){
    digitalWrite(lowestPin, 0); 
  }
}


